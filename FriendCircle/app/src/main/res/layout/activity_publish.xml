<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.zjw.friendcircle.publish">


    <Button
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:text="取消"
        android:textColor="#000"
        android:textStyle="bold"
        android:id="@+id/cancel_button"
        android:layout_alignParentTop="true"
        android:background="@null"
        style="?android:attr/borderlessButtonStyle"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发表文字"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
       />
    <Button
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="发表"
        android:id="@+id/publish_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textColor="#ff1dff17"
        style="?android:attr/borderlessButtonStyle"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText3"
        android:maxLines="20"
        android:ems="100"
        android:layout_below="@+id/cancel_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:layout_marginTop="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/cancel_button"
        android:id="@+id/L5"
        android:background="@drawable/kuang1"
        ></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@+id/L5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/local"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="所在位置"
        android:textSize="25dp"
        android:id="@+id/textView13"
        android:layout_below="@+id/L5"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_toEndOf="@+id/cancel_button" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=">"
        android:id="@+id/button"
        android:layout_below="@+id/L5"
        android:layout_marginTop="21dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/L6"
        android:layout_below="@+id/L5"
        android:layout_alignRight="@+id/publish_button"
        android:layout_alignEnd="@+id/publish_button"
        android:background="@drawable/kuang1"
        ></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/L6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/person"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="谁可以看"
        android:textSize="25dp"
        android:id="@+id/textView14"
        android:layout_below="@+id/L6"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_toEndOf="@+id/cancel_button" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=">"
        android:id="@+id/button1"
        android:layout_below="@+id/L6"
        android:layout_marginTop="21dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/L7"
        android:layout_below="@+id/L6"
        android:layout_alignRight="@+id/publish_button"
        android:layout_alignEnd="@+id/publish_button"
        android:background="@drawable/kuang1"
        ></LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="公开"
        android:textSize="20dp"
        android:id="@+id/textView15"
        android:layout_toLeftOf="@+id/button1"
        android:layout_below="@+id/L6"
        android:layout_marginTop="30dp"
         />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:layout_below="@+id/L7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/a"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提醒谁看"
        android:textSize="25dp"
        android:id="@+id/textView16"
        android:layout_below="@+id/L7"
        android:layout_marginTop="27dp"
        android:layout_toRightOf="@+id/cancel_button"
        android:layout_toEndOf="@+id/cancel_button" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text=">"
        android:id="@+id/button2"
        android:layout_below="@+id/L7"
        android:layout_marginTop="21dp"
        style="?android:attr/borderlessButtonStyle"
        android:layout_alignParentRight="true"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/L8"
        android:layout_below="@+id/L7"
        android:layout_alignRight="@+id/publish_button"
        android:layout_alignEnd="@+id/publish_button"
        android:background="@drawable/kuang1"
        ></LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:layout_below="@+id/L8"
        android:background="@drawable/kj"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
